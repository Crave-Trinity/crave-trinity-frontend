<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
    "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Let Xcode fill in the executable name at build time -->
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <!-- Must match PRODUCT_BUNDLE_IDENTIFIER in Build Settings -->
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <!-- The “user-friendly” name of your app -->
    <key>CFBundleName</key>
    <string>CravePhone</string>

    <!-- Versioning keys (required) -->
    <key>CFBundleShortVersionString</key>
    <string>1.0</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- Your privacy usage keys -->
    <key>NSMicrophoneUsageDescription</key>
    <string>This app uses the microphone to record cravings.</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>This app uses speech recognition to convert voice input into text.</string>

    <!-- Scene manifest, if you're using scene delegates -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationPreferredDefaultSceneSessionRole</key>
        <string>UIWindowSceneSessionRoleApplication</string>
        <key>UIApplicationSupportsMultipleScenes</key>
        <true/>
        <key>UISceneConfigurations</key>
        <dict/>
    </dict>
</dict>
</plist>
